@model UserLogatModel
@{
    ViewData["Title"] = "Login";
}

<div class="container body-content">

    <h2>Log in</h2>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post" novalidate="novalidate">
                    <h4>Folositi contul dumneavoastra pentru a va inregistra.</h4>
                    <hr>
                    <div class="text-danger validation-summary-valid" data-valmsg-summary="true">
                        <ul>
                            <li style="display:none"></li>
                        </ul>
                    </div>
                    <div class="form-group">
                        <label for="UserName">Nume Utilizator:</label>
                        <input class="form-control" id="UserName" name="UserName" value="">
                    </div>
                    <div class="form-group">
                        <label for="Password">Parola:</label>
                        <input type="password" class="form-control" id="Password" name="Password" value="">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                    @if (Model.NumeUtilizatorGresit)
                    {
                        <div id="alertaUsernameGresit" class="alert-danger">User Name gresit.</div>
                    }
                    @if (Model.ParolaGresita)
                    {
                        <div id="alertaParolaGresita" class="alert-danger">Parola gresita.</div>
                    }

                </form>
            </section>
        </div>
    </div>
</div>
